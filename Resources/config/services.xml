<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="zikula_legal_module.container.link_container.class">Zikula\LegalModule\Container\LinkContainer</parameter>
        <parameter key="twig.extension.zikula_legal_module.class">Zikula\LegalModule\Twig\TwigExtension</parameter>
        <parameter key="zikula_legal_module.event_listener.class">Zikula\LegalModule\Listener\UsersUiListener</parameter>
        <parameter key="zikula_legal_module.eu_warning_listener.class">Zikula\LegalModule\Listener\EuCookieWarningInjectorListener</parameter>
        <parameter key="zikula_legal_module.reset_agreement_helper.class">Zikula\LegalModule\Helper\ResetAgreementHelper</parameter>
        <parameter key="euwarning.stylesheet">null</parameter>
    </parameters>
    <services>
        <service id="zikula_legal_module.container.link_container" class="%zikula_legal_module.container.link_container.class%">
            <argument type="service" id="translator.default" />
            <argument type="service" id="jms_i18n_routing.router" />
            <argument type="service" id="zikula_permissions_module.api.permission" />
            <argument type="service" id="zikula_extensions_module.api.variable" />
            <tag name="zikula.link_container" />
        </service>

        <service id="twig.extension.zikula_legal_module" class="%twig.extension.zikula_legal_module.class%" public="false">
            <argument type="service" id="twig" />
            <tag name="twig.extension" />
        </service>

        <service id="zikula_legal_module.event_listener" class="%zikula_legal_module.event_listener.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="twig" />
            <argument type="service" id="translator.default" />
            <argument type="service" id="jms_i18n_routing.router" />
            <argument type="service" id="zikula_core.common.csrf_token_handler" />
            <argument type="service" id="zikula_extensions_module.api.variable" />
            <argument type="service" id="zikula_users_module.current_user" />
        </service>

        <service id="zikula_legal_module.eu_warning_listener" class="%zikula_legal_module.eu_warning_listener.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="translator.default" />
            <argument type="service" id="zikula_extensions_module.api.variable" />
            <argument type="service" id="zikula_core.common.theme.asset_helper" />
            <argument>%euwarning.stylesheet%</argument>
        </service>

        <service id="zikula_legal_module.reset_agreement_helper" class="%zikula_legal_module.reset_agreement_helper.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="zikula_permissions_module.api.permission" />
            <argument>%euwarning.stylesheet%</argument>
        </service>
    </services>
</container>
